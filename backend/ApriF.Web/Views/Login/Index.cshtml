<body>
    <div id="container" class="cls-container">
        <!-- BACKGROUND IMAGE -->
        <!--===================================================-->
        @*<div id="bg-overlay"></div>*@
        <div id="bg-overlay" class="bg-img" style="background-image: url(@Url.Content("~/Assets/img/bg-img/bg-img-1.jpg"))"></div>
        <!-- LOGIN FORM -->
        <!--===================================================-->
        <div class="cls-content">
            <div class="cls-content-sm panel">
                <div class="panel-body">
                    <div class="mar-ver pad-btm">
                        <h1 class="h3">ApriF</h1>
                        <p>Ingrese sus credenciales</p>
                    </div>
                    <form action="@Url.Action("Validar", "Login")" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="emisorId" placeholder="Ruc" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="usuarioId" placeholder="Usuario">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="clave" placeholder="Contraseña">
                        </div>
                        <div class="checkbox pad-btm text-left">
                            <input id="demo-form-checkbox" class="magic-checkbox" type="checkbox">
                            <label for="demo-form-checkbox">Recordar Cuenta</label>
                        </div>
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Iniciar Sesión</button>
                        @if(TempData["login_validar_msg_error"] != null)
                        {
                            <div class="alert alert-danger">
                                @(TempData["login_validar_msg_error"].ToString())
                            </div>
                        }
                    </form>
                </div>
                <div class="pad-all">
                    <a href="pages-password-reminder.html" class="btn-link mar-rgt">¿Olvidaste tu contraseña?</a>
                    <a href="pages-register.html" class="btn-link mar-lft">Solicitar una cuenta</a>
                </div>
            </div>
        </div>
